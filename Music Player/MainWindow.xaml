<Window x:Class="Music_Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Music_Player"
        xmlns:vm="clr-namespace:Music_Player.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="400">
    <Window.DataContext>
        <vm:AppViewModel/>
    </Window.DataContext>
    <Grid Margin="10 10 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="600"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Music Player" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontFamily="Verdana" FontStyle="Italic"/>
        <ContentControl Grid.Row="1" Content="{Binding MusicPlayerVM}"/>


    </Grid>
</Window>
